<% layout("/layouts/boilerplate") -%> 

<h1 class="col-6 offset-3 mt-5" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"><b>Login</b></h1>

<div class="row mt-3 col-5 offset-3 border rounded border-dark p-3 mt-3">
     <div>
        <form action="/login" method="POST" class="needs-validation" novalidate >

             <div  class="mb-2">
            <label class="form-label" for="username">Username</label>
            <input name="username" id="username" type="text" class="form-control" required>
            </div>

          <div class="mb-3">  
            <label class="form-label" for="password">Password</label>
            <input name="password" id="password" type="password" class="form-control" required>
         </div>

            <button class="btn btn-dark offset-5">Login</button>
        </form>
     </div>
</div>